{
    "exclusive": false,
    "layer": "overlay",
    "position": "left",
    "height": 767,
    //"width": 1031,
    "spacing": 0,
    "margin-top": 0,
    "margin-bottom":0,
    "margin-left": 1,
    "margin-right": 0,

    "modules-left": [
        "custom/searchbar",
        "group/top",
        "group/top2"
    ],
    "modules-center": [
        "custom/notification"
    ],
    "modules-right": [
        "group/bot"
    ],


    "custom/searchbar": {
        "format": "Ó©≠ Search",
        "tooltip": false,
        "on-click": "pkill -x rofi || rofi -show drun"
    },

    "group/top": {
        "orientation": "horizontal",
        "modules": [
            "group/greet",
            "custom/updates"
        ]
    },

    "group/greet": {
        "orientation": "vertical",
        "modules": [
            "custom/greeting",
            "custom/name"
        ]
    },

    "custom/greeting": {
        "format": "{}",
        "tooltip": false,
        "exec": "$HOME/.config/waybar/home/setup.sh greeting"
    },
    "custom/name": {
        "format": "{}",
        "tooltip": false,
        "exec": "echo $(whoami)!"
    },

    "custom/updates": {
        "format": "{} {icon}",
        "return-type": "json",
        "format-icons": {
            "has-updates": "ÔÄô ",
            "updated": "ÔÅù "
        },
        "exec": "waybar-module-pacman-updates --interval-seconds 5 --network-interval-seconds 300"
    },

    "group/top2": {
        "orientation": "horizontal",
        "modules": [
            "cpu",
            "backlight",
            "pulseaudio"
        ]
    },

    "custom/notification": {
        "exec": "cat '/tmp/notifications'",
        "interval": 1,
	    "return-type": "json",
	    "max-length": 50
    },

    "group/bot": {
        "orientation": "horizontal",
        "modules": [
            "clock",
            "custom/power"
        ]
    },

