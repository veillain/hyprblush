#!/bin/bash
choice=$1
if [ -n "$choice" ]; then
    lastcommit=$(git show --summary | awk 'NR==5' | sed 's/    //')
    git add $choice || exit
    echo ""
    echo "[Last Commit]"
    echo $lastcommit
    echo ""
    echo "[Commit Message]"
    read -p "\> " commitmsg
    git commit -m "$commitmsg"
    echo ""
    echo "[Branch to Push]"
    read -p "\> " branches
    git push -u origin $branches
else
    echo "Please include files you want to add, or type '.' for all"
fi
